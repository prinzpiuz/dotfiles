# resticprofile
RESTICPROFILE_BASE_COMMAND="sudo rm -rf /tmp/resticprofile-profile-src.lock && rm -rf /home/prinzpiuz/.config/resticprofile/log/* && sudo resticprofile --config /home/prinzpiuz/.config/resticprofile/profiles.conf --name 'default'"
alias rp_dry_run="$RESTICPROFILE_BASE_COMMAND backup --dry-run"
