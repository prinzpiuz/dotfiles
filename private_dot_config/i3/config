# move floating windows with keys
bindsym $mod+m mode "move" focus floating
mode "move" {
    bindsym $mod+Tab focus right

    bindsym Left  move left
    bindsym Down  move down
    bindsym Up    move up
    bindsym Right move right

    bindsym h     move left
    bindsym j     move down
    bindsym k     move up
    bindsym l     move right

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


#copyq for clipboard management
exec --no-startup-id copyq

#switch to different sound outputs
bindsym $super+1 exec --no-startup-id pactl set-default-sink $primary_sink && pactl set-sink-volume $primary_sink 75% && i3-msg restart && dunstify "Switched To Speakers"
bindsym $super+2 exec --no-startup-id pactl set-default-sink $bluetooth_sink && pactl set-sink-volume $bluetooth_sink 100% && i3-msg restart && dunstify "Switched To Bluetooth"
bindsym $super+3 exec --no-startup-id pactl set-default-sink $other && pactl set-sink-volume $other 40% && i3-msg restart && dunstify "Switched To Other"